{
  "compilerOptions": {
    "module": "es2020",
    "target": "es6",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist/esm",
    "baseUrl": ".",
    "declaration": true,
    "resolveJsonModule": true
  },
  "lib": ["es2017"],
  "include": ["src"],
  "exclude": ["src/*.test.ts"]
}
